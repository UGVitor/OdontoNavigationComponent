<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.odontonavigationcomponent.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_pacienteDetailFragment"
            app:destination="@id/pacienteDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/pacientesFragment"
        android:name="com.example.odontonavigationcomponent.PacientesFragment"
        android:label="Pacientes"
        tools:layout="@layout/fragment_pacientes">
        <action
            android:id="@+id/action_pacientesFragment_to_pacienteDetailFragment"
            app:destination="@id/pacienteDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/consultasFragment"
        android:name="com.example.odontonavigationcomponent.ConsultasFragment"
        android:label="Consultas"
        tools:layout="@layout/fragment_consultas">
        <action
            android:id="@+id/action_consultasFragment_to_consultaDetailFragment"
            app:destination="@id/consultaDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.odontonavigationcomponent.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/pacienteDetailFragment"
        android:name="com.example.odontonavigationcomponent.PacienteDetailFragment"
        android:label="Detalhes do Paciente"
        tools:layout="@layout/fragment_paciente_detail">
        <argument
            android:name="pacienteId"
            app:argType="string" />
        <argument
            android:name="pacienteNome"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/consultaDetailFragment"
        android:name="com.example.odontonavigationcomponent.ConsultaDetailFragment"
        android:label="Detalhes da Consulta"
        tools:layout="@layout/fragment_consulta_detail">
        <argument
            android:name="consultaId"
            app:argType="string" />
        <argument
            android:name="pacienteNome"
            app:argType="string" />
        <argument
            android:name="dataConsulta"
            app:argType="string" />
    </fragment>

</navigation>
